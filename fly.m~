function state = fly(aph, dest, direction)
    
    delete(findobj('Tag', num2str(aph.FaceColor)));

    x = aph.XData;
    y = aph.YData;

    % Check if plane has arrived
    if norm(dest - [mean(x) mean(y)]) < 1
        delete(aph);
        state = 1;
        return
    end

    aph.XData = x + randi([1 3]) * direction(1);
    aph.YData = y + radirection(2);

    text( ...
        x(1) + 20, y(1) , ...
        aph.Tag, ...
        'HorizontalAlignment', 'left', ...
        'BackgroundColor', '#000000', ...
        'Color', 'g', ...
        'EdgeColor', '#808080', ...
        'Tag', num2str(aph.FaceColor) ...
    );

    state = 0;
end